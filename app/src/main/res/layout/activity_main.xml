<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="539dp"
            android:layout_height="898dp" app:srcCompat="@drawable/image1" android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:ems="10"
            android:id="@+id/cityName"
            app:layout_constraintVertical_bias="0.102" android:textSize="25sp"
            android:textColor="@color/white"
    />
    <TextView
            android:layout_width="273dp"
            android:layout_height="293dp" android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20sp"
            android:textColor="@color/white"/>
    <TextView
            android:text="Enter City Name"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.047"/>
    <Button
            android:text="Search Weather"
            android:textSize="15sp"
            android:layout_width="149dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="61dp" android:id="@+id/button"
            android:onClick="clicked"
            app:layout_constraintHorizontal_bias="0.209" app:layout_constraintVertical_bias="0.214"/>
    <Button
            android:text="clear"
            android:textSize="15sp"
            android:layout_width="149dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="61dp" android:id="@+id/button1"
            android:onClick="clearAll"
            app:layout_constraintHorizontal_bias="0.79" app:layout_constraintVertical_bias="0.214"/>
</androidx.constraintlayout.widget.ConstraintLayout>